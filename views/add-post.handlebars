{{#if vehicle.nickname}}
<h1 class="text-center p-10 text-4xl font-bold text-indigo-500">Add A New Post for {{vehicle.nickname}}</h1>
{{else}}
<h1 class="text-center p-10 text-4xl font-bold text-indigo-500">Add A New Post for {{title}}</h1>
{{/if}}
<div class="flex items-center justify-center p-12">
  <div class="mx-auto w-full max-w-[550px]">
    <form id="addpost-form" method="POST" class="text-center">
      <div class="mb-5">
        <label for="name" class="mb-3 block text-base font-medium text-indigo-500"> Name of Service </label>
        <input
          type="text"
          name="post"
          id="new-post-title"
          class="w-full rounded-md border border-indigo-500 bg-white py-3 px-6 text-base font-medium text-text-indigo-500 outline-none focus:border-indigo-500 focus:shadow-md"
        />
      </div>
      <div class="mb-5">
        <label class="mb-3 block text-base font-medium text-indigo-500"> Comments: </label>
        <input
          type="text"
          name="new-post-content"
          id="new-post-content"
          class="w-full rounded-md border border-indigo-500 bg-white py-3 px-6 text-base font-medium text-text-indigo-500 outline-none focus:border-indigo-500 focus:shadow-md"
        />
      </div>
      <div class="mb-5">
        <label for="subject" class="mb-3 block text-base font-medium text-indigo-500"> Cost </label>
        <input
          type="number"
          name="new-post-cost"
          id="new-post-cost"
          class="w-full rounded-md border border-indigo-500 bg-white py-3 px-6 text-base font-medium text-text-indigo-500 outline-none focus:border-indigo-500 focus:shadow-md"
        />
      </div>
      <div class="mb-5">
        <label for="subject" class="mb-3 block text-base font-medium text-indigo-500"> Date of Maintenance </label>
        <input
          type="date"
          name="date-of-maintenance"
          id="date-of-maintenance"
          class="w-full rounded-md border border-indigo-500 bg-white py-3 px-6 text-base font-medium text-text-indigo-500 outline-none focus:border-indigo-500 focus:shadow-md"
        />
      </div>
      <input id="vehicleId" style="display: none" value="{{vehicleId}}">
      <div>
        <button type="submit" class="hover:shadow-form rounded-md bg-indigo-600 transition duration-150 hover:bg-indigo-500 py-3 px-8 text-base font-semibold text-white outline-none w-full">
          ADD POST
        </button>
      </div>
    </form>
  </div>
</div>
<script src="/js/addpost.js"></script>