<div id="popup-modal" tabindex="-1" class="absolute flex justify-center z-50 p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)]" style="display: none;">
    <div class="relative w-full max-w-md max-h-full">
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
            <div class="p-6 text-center">
                <svg class="mx-auto mb-4 text-gray-400 w-12 h-12 dark:text-gray-200" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 11V6m0 8h.01M19 10a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
                </svg>
                <h3 class="mb-5 text-lg font-normal text-gray-500 dark:text-gray-400">Are you sure you want to delete this post?</h3>
                <button id="confirm" data-modal-hide="popup-modal" type="button" class="text-white bg-red-600 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800 font-medium rounded-lg text-sm inline-flex items-center px-5 py-2.5 text-center mr-2">
                    Yes, I'm sure
                </button>
                <button id="cancel" data-modal-hide="popup-modal" type="button" class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900 focus:z-10 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-500 dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-gray-600">No, cancel</button>
            </div>
        </div>
    </div>
</div>
{{#if post.vehicle.nickname}}
<h1 class="text-center p-10 text-4xl font-bold text-indigo-500">Edit Post for {{post.vehicle.nickname}}</h1>
{{else}}
<h1 class="text-center p-10 text-4xl font-bold text-indigo-500">Edit Post for {{title}}</h1>
{{/if}}
<div class="flex items-center justify-center p-12">
  <div class="mx-auto w-full max-w-[550px]">
    <form id="editpost-form" method="POST" class="text-center">
      <div class="mb-5">
        <input id="vehicleId" value="{{post.vehicle.id}}" style="display: none;">
        <label for="name" class="mb-3 block text-base font-medium text-indigo-500"> Name of Service </label>
        <input
          type="text"
          name="post"
          value="{{post.title}}"
          id="edit-post-title"
          class="w-full rounded-md border border-indigo-500 bg-white py-3 px-6 text-base font-medium text-text-indigo-500 outline-none focus:border-indigo-500 focus:shadow-md"
        />
      </div>
      <div class="mb-5">
        <label class="mb-3 block text-base font-medium text-indigo-500"> Comments: </label>
        <input
          type="text"
          name="edit-post-content"
          value="{{post.content}}"
          id="edit-post-content"
          class="w-full rounded-md border border-indigo-500 bg-white py-3 px-6 text-base font-medium text-text-indigo-500 outline-none focus:border-indigo-500 focus:shadow-md"
        />
      </div>
      <div class="mb-5">
        <label for="subject" class="mb-3 block text-base font-medium text-indigo-500"> Cost </label>
        <input
          type="number"
          value="{{post.cost}}"
          name="edit-post-cost"
          id="edit-post-cost"
          class="w-full rounded-md border border-indigo-500 bg-white py-3 px-6 text-base font-medium text-text-indigo-500 outline-none focus:border-indigo-500 focus:shadow-md"
        />
      </div>
      <div style="display: none">
        <input id="postId" value="{{post.id}}">
      </div>
      <div>
        <button id="edit-post-btn" type="submit" class="hover:shadow-form transition duration-150 rounded-md bg-indigo-600 hover:bg-indigo-500 py-3 px-8 text-base font-semibold text-white outline-none w-full">
          UPDATE POST
        </button>
      </div>
    </form>
    <div id="delete-post-btn" style="margin-top: 10px;">
        <button id="delete-post-button" type="submit" class="hover:shadow-form transition duration-150 rounded-md bg-red-600 hover:bg-red-500 py-3 px-8 text-base font-semibold text-white outline-none w-full">
          DELETE POST
        </button>
      </div>
  </div>
</div>
<script src="/js/editpost.js"></script>
<script src="/js/deletepost.js"></script>