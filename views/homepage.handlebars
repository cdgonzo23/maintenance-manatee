{{#each user}}
<a href="/post/{{id}}" class="post-card-link">
  <article class="post-card">
      <h5>{{user.vehicle.nickname}}</h5>
      <ul>
        <li>{{user.vehicle.manufacturer}}</li>
        <li>{{user.vehicle.modelName}}</li>
        <li>{{user.vehicle.year}}</li>
        <li>{{user.vehicle.color}}</li>
      </ul>
  </article>
</a>
{{/each}}
<main>
    {{#if loggedIn}}
    <h3 class="text-center p-10 text-4xl font-bold text-indigo-500">Your Vehicles</h3>

    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-8 m-10 mb-10">
        <!-- START Card component -->
        {{#each user.Vehicles}}
        <a href="/post/{{id}}" class="container grid grid-cols-1 lg:grid-cols-2 bg-white shadow-2xl rounded-2xl p-6 hover:scale-105 ease-in-out duration-500">
          <div>
            <h4 class="text-3xl font-bold text-indigo-500">{{nickname}}</h4>
            <ul class="py-5 font-medium text-lg">
              <li>Make: {{manufacturer}}</li>
              <li>Model: {{modelName}}</li>
              <li>Year: {{year}}</li>
              <li>Color: {{color}}</li>
            </ul>
          </div>
          <figure class="flex">
            <img src="assets/mini-cooper.jpg" alt="" />
          </figure>
        </a>
        {{/each}}
        <!-- END Card component -->
      </div>
    {{else}}
      <!-- section hero -->
      <section>
        <div class="bg-indigo-50 sm:w-3/4 lg:w-3/5 px-4 py-6 space-y-6 sm:space-y-0 sm:gap-4">
          <div class="h-5/6 col-span-3 bg-gradient-to-tr from-indigo-800 to-indigo-500 rounded-md flex items-center p-5">
            <div class="sm:ml-10 sm:w-3/5">
              <h2 class="text-white text-4xl">Maintenance Manatee</h2>
              <p class="text-indigo-100 mt-4 font-light tracking-wider leading-7">
                Keeping up with all the maintenance and money you've spent on your car can be a hassle. Let Maintenance Manatee take care of
                everything vehicle-related, giving you more time to enjoy activities like swimming and savoring delicious seafood.
              </p>
              <a href="/login" class="uppercase inline-block mt-8 text-sm bg-white py-2 px-4 rounded font-semibold hover:bg-indigo-100">get started</a>
            </div>
          </div>
          <!-- <div class="h-96 col-span-2"></div> -->
        </div>
      </section>
      <section class="pb-8">
        <h3 class="text-4xl font-bold text-indigo-500 text-center p-10">Features</h3>
        <div class="grid sm:grid-cols-3 gap-5 justify-center px-5">
          <div class="container bg-white shadow-2xl rounded-2xl p-6">
            <h5 class="text-2xl font-bold text-indigo-500">Log Maintenance</h5>
            <p class="py-5">Keep a neat and convenient log of all the maintenance that keeps your vehicle running.</p>
          </div>
          <div class="container bg-white shadow-2xl rounded-2xl p-6">
            <h5 class="text-2xl font-bold text-indigo-500">Track Spending</h5>
            <p class="py-5">View the individual or accumulated cost of your vehicle maintenance.</p>
          </div>
          <div class="container bg-white shadow-2xl rounded-2xl p-6">
            <h5 class="text-2xl font-bold text-indigo-500">View Receipts</h5>
            <p class="py-5">Save a picture of your receipt to reference receipts for the itemized costs of each part or labor cost.</p>
          </div>
        </div>
      </section>
      {{/if}}
  
