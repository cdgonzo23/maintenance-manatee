<h3 class="text-center pt-6 pb-2 text-4xl font-bold text-indigo-500">Maintenance Log</h3>
<h3 class="text-3xl pb-4 text-indigo-500 font-bold ml-3 text-center">
  {{#if nickname}}
  {{nickname}}
  {{else}}
  {{title}}
  {{/if}}
</h3>
    <div class="flex flex-col items-center px-5">
       <a class="py-4 mb-4" href="/add-post/{{vehicleId}}">
        <button class="w-full flex content-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">+ Add a Post</button>
      </a>
    {{#each posts}}
      <a href="/edit-post/{{id}}" class="block w-full p-6 rounded-lg shadow-lg bg-white max-w-md mb-10 hover:scale-105 ease-in-out duration-500 text-md">
        <div class="flex justify-between mb-4">
          <p class="font-medium text-indigo-600">{{title}}</p>
          <p class="font-medium text-indigo-600 hover:text-indigo-700 focus:text-indigo-800 duration-300 transition ease-in-out text-sm">
            {{format_date dateOfMaintenance}}
          </p>
        </div>
        <p class="text-gray-700 mb-6">
          {{content}}
        </p>
        <p class="font-medium text-indigo-600 hover:text-indigo-700 focus:text-indigo-800 duration-300 transition ease-in-out text-sm">Cost: ${{cost}}</p>
      </a>
      {{/each}}
    </div>
   